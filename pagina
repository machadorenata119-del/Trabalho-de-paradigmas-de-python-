    <main id="lista-receitas">
        <div class="receita">
            <button class="delete-btn">Excluir</button>
            <button class="edit-btn">Editar</button>
            <h2>Risoto de Cogumelos</h2>
            <p><strong>Tempo de preparo:</strong> 45 minutos</p>
            <p><strong>Ingredientes:</strong><br>
            Arroz arb√≥rio, cogumelos frescos, manteiga, cebola, vinho branco, caldo de legumes e parmes√£o.</p>
            <p><strong>Modo de preparo:</strong><br>
            Refogue a cebola na manteiga, adicione o arroz, o vinho e o caldo aos poucos at√© cozinhar. Misture os cogumelos e finalize com parmes√£o.</p>
        </div>
    </main>

    <!-- Modal de adicionar receita -->
    <div class="modal" id="modalReceita">
        <div class="modal-content">
            <button class="close-btn" onclick="fecharModal('modalReceita')">&times;</button>
            <h3>Adicionar Nova Receita</h3>
            <input type="text" id="titulo" placeholder="T√≠tulo da receita">
            <input type="text" id="tempo" placeholder="Tempo de preparo">
            <textarea id="ingredientes" placeholder="Ingredientes (um por linha)"></textarea>
            <textarea id="modo" placeholder="Modo de preparo"></textarea>
            <button id="salvarReceita">Salvar Receita</button>
        </div>
    </div>

    <!-- Modal de login -->
    <div class="modal" id="modalLogin">
        <div class="modal-content">
            <button class="close-btn" onclick="fecharModal('modalLogin')">&times;</button>
            <h3>Entrar</h3>
            <input type="email" id="loginEmail" placeholder="E-mail">
            <input type="password" id="loginSenha" placeholder="Senha">
            <button onclick="alert('Login efetuado com sucesso!')">Entrar</button>
        </div>
    </div>

    <!-- Modal de cadastro -->
    <div class="modal" id="modalCadastro">
        <div class="modal-content">
            <button class="close-btn" onclick="fecharModal('modalCadastro')">&times;</button>
            <h3>Criar Conta</h3>
            <input type="text" id="cadastroNome" placeholder="Nome completo">
            <input type="email" id="cadastroEmail" placeholder="E-mail">
            <input type="password" id="cadastroSenha" placeholder="Senha">
            <button onclick="alert('Cadastro realizado com sucesso!')">Cadastrar</button>
        </div>
    </div>

    <script>
        const modalReceita = document.getElementById('modalReceita');
        const modalLogin = document.getElementById('modalLogin');
        const modalCadastro = document.getElementById('modalCadastro');
        const listaReceitas = document.getElementById('lista-receitas');

        let receitaAtual = null;

        // Bot√µes principais
        document.getElementById('adicionarBtn').onclick = () => {
            receitaAtual = null; // Nova receita
            modalReceita.style.display = 'flex';
        };
        document.getElementById('loginBtn').onclick = () => modalLogin.style.display = 'flex';
        document.getElementById('cadastroBtn').onclick = () => modalCadastro.style.display = 'flex';

        // Fun√ß√£o para editar receita
        function editarReceita(receita) {
            receitaAtual = receita;
            document.getElementById('titulo').value = receita.querySelector('h2').innerText;
            document.getElementById('tempo').value = receita.querySelector('p:nth-of-type(1)').innerText.replace('Tempo de preparo: ', '');
            document.getElementById('ingredientes').value = receita.querySelector('p:nth-of-type(2)').innerHTML.replace(/<br>/g, '\n').replace('<strong>Ingredientes:</strong>\n', '');
            document.getElementById('modo').value = receita.querySelector('p:nth-of-type(3)').innerHTML.replace(/<br>/g, '\n').replace('<strong>Modo de preparo:</strong>\n', '');
            modalReceita.style.display = 'flex';
        }

        // Salvar ou atualizar receita
        document.getElementById('salvarReceita').onclick = () => {
            const titulo = document.getElementById('titulo').value.trim();
            const tempo = document.getElementById('tempo').value.trim();
            const ingredientes = document.getElementById('ingredientes').value.trim();
            const modo = document.getElementById('modo').value.trim();

            if (!titulo || !tempo || !ingredientes || !modo) {
                alert('Preencha todos os campos!');
                return;
            }

            if (receitaAtual) {
                // Atualiza receita existente
                receitaAtual.querySelector('h2').innerText = titulo;
                receitaAtual.querySelector('p:nth-of-type(1)').innerHTML = `<strong>Tempo de preparo:</strong> ${tempo}`;
                receitaAtual.querySelector('p:nth-of-type(2)').innerHTML = `<strong>Ingredientes:</strong><br>${ingredientes.replace(/\n/g, '<br>')}`;
                receitaAtual.querySelector('p:nth-of-type(3)').innerHTML = `<strong>Modo de preparo:</strong><br>${modo}`;
                receitaAtual = null;
            } else {
                // Cria nova receita
                const nova = document.createElement('div');
                nova.classList.add('receita');
                nova.innerHTML = `
                    <button class="delete-btn">Excluir</button>
                    <button class="edit-btn">Editar</button>
                    <h2>${titulo}</h2>
                    <p><strong>Tempo de preparo:</strong> ${tempo}</p>
                    <p><strong>Ingredientes:</strong><br>${ingredientes.replace(/\n/g, '<br>')}</p>
                    <p><strong>Modo de preparo:</strong><br>${modo}</p>
                `;
                nova.querySelector('.delete-btn').onclick = () => nova.remove();
                nova.querySelector('.edit-btn').onclick = () => editarReceita(nova);
                listaReceitas.appendChild(nova);
            }

            fecharModal('modalReceita');
            document.getElementById('titulo').value = '';
            document.getElementById('tempo').value = '';
            document.getElementById('ingredientes').value = '';
            document.getElementById('modo').value = '';
        };

        // Fechar modais
        function fecharModal(id) { document.getElementById(id).style.display = 'none'; }
        window.onclick = (e) => { if (e.target.classList.contains('modal')) e.target.style.display = 'none'; };

        // Inicializa bot√µes de delete e edit existentes
        document.querySelectorAll('.receita').forEach(r => {
            r.querySelector('.delete-btn').onclick = () => r.remove();
            r.querySelector('.edit-btn').onclick = () => editarReceita(r);
        });
    </script>
</body>
</html>
