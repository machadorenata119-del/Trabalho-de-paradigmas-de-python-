<header>üçΩÔ∏è Receitas Gourmet</header>

<main>
    <h2>Cadastrar Receita</h2>
    <form id="recipeForm">
        <input type="hidden" id="editIndex">
        <input type="text" id="titulo" placeholder="T√≠tulo da receita" required>
        <textarea id="descricao" rows="3" placeholder="Descri√ß√£o da receita" required></textarea>
        <button type="submit">Salvar Receita</button>
    </form>

    <h2>Lista de Receitas</h2>
    <div id="listaReceitas"></div>
</main>

<script>
    let receitas = [
        { titulo: "Lasanha de Frango", descricao: "Camadas de massa, frango desfiado, molho branco e queijo derretido." },
        { titulo: "Bolo de Chocolate", descricao: "Fofinho e molhadinho, coberto com calda cremosa de chocolate." },
        { titulo: "Risoto de Camar√£o", descricao: "Arroz arb√≥rio cremoso com camar√µes salteados e toque de lim√£o." }
    ];

    const lista = document.getElementById("listaReceitas");
    const form = document.getElementById("recipeForm");
    const titulo = document.getElementById("titulo");
    const descricao = document.getElementById("descricao");
    const editIndex = document.getElementById("editIndex");

    function renderizar() {
        lista.innerHTML = "";
        receitas.forEach((r, i) => {
            const card = document.createElement("div");
            card.className = "card";
            card.innerHTML = `
                <h3>${r.titulo}</h3>
                <p>${r.descricao}</p>
                <div class="actions">
                    <button class="edit" onclick="editar(${i})">Editar</button>
                    <button class="delete" onclick="excluir(${i})">Excluir</button>
                </div>
            `;
            lista.appendChild(card);
        });
    }

    form.addEventListener("submit", (e) => {
        e.preventDefault();
        const nova = { titulo: titulo.value, descricao: descricao.value };

        if (editIndex.value) {
            receitas[editIndex.value] = nova;
            editIndex.value = "";
        } else {
            receitas.push(nova);
        }

        form.reset();
        renderizar();
    });

    function editar(i) {
        titulo.value = receitas[i].titulo;
        descricao.value = receitas[i].descricao;
        editIndex.value = i;
    }

    function excluir(i) {
        if (confirm("Tem certeza que deseja excluir esta receita?")) {
            receitas.splice(i, 1);
            renderizar();
        }
    }

    renderizar();
</script>

</body>
